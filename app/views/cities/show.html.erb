<h1>This is the cities/show page!</h1>
<div class="container">
	<div class="row">
		<br>
	</div>
	<div class="row">
		<div class="text-center well">
			<%=  @city.name  %><br>
				<h2> <%= @city.posts %></h2>
			<% @posts.each do |post| %>
		<li>
			Post: <%= post.content %> <br>
			Title: <%= post.title %> <br>
			User:<%= post.user %><br>
			PostID: <%= post.id %>
			<%= button_to "See full article", posts_path(post.id) %>
			

		</li>
	<% end %>
		</div>
	</div>
</div>
