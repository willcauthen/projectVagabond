<div class="container">
	<div class="row">
		<br>
	</div>
	<div class="row">
		<div class="text-center well">
			<%=  @city.name  %><br>
				<h2> <%= @city.posts %></h2>
			<% @posts.each do |post| %>
		<li>
			Post: <%= post.content %> <br>
			Title: <%= post.title %> <br>
			<%= post.user %><br>
			<%= button_to "Edit", 'edit', method: :edit %>
			<%= button_to "Delete", 'post#destroy', method: :destroy %>
		</li>
	<% end %>
		</div>
	</div>
</div>
