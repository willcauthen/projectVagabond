<h1 class="text-center">Vagabond contributors</h1>

<% @users.each do |user| %>

<div class="container">
	<div class="row">
		<div col-md-3 col-md-offset-3>
			<div class="well">
				<div class="media">
					<div class="media-left pull-left">
						<%= image_tag user.Img_File, :class =>'media-object'  %>
					</div>
					<div class="media-body">
						<h3 class="media-heading"> <%= link_to user.user_name, user, method: :get %> </h3>
						<strong>Current city:</strong> <%= user.current_city %><br>
						<strong>About:</strong> <%= user.about %><br><br>
						<% if @user == true%>
						<%= button_to "Delete", user, method: :delete %>
						<% end %>
					</div> 
				</div>
				<div class="text-center">
					<h2> <%= user.user_name %> </h2>
					Current city: <%= user.current_city %><br>
					About: <%= user.about %><br><br>
					<%= button_to "Delete", user, method: :destroy %>
				</div> 
			</div>
		</div>
	</div>
</div>

<% end %>
