<h1 class="text-center">Vagabond contributors</h1>

<% @users.each do |user| %>

<div class="container">
	<div class="row">
		<div col-md-3 col-md-offset-3>
			<div class="well">
				<div class="pull-left">
				<%= image_tag user.Img_File  %>
				</div>
				<div class="text-center">
					<h2> <%= link_to user.user_name, user, method: :get %> </h2>
					Current city: <%= user.current_city %><br>
					About: <%= user.about %><br><br>
					<%= button_to "Delete", user, method: :delete %>
				</div> 
			</div>
		</div>
	</div>
</div>

<% end %>
