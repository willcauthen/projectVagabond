 <div class="container">
  <div class="row">
 <div class="text-left well">
<h3><%= @post.title %> </h3>
<hr>
<p><%= @post.content %> </p>
<% var = User.find(@post.user) %>
written by <%= link_to var.user_name, "/users/#{@post.user}" %><br>
City: <%= link_to @city.name, "/cities/#{@city.id}" %><br>
PostID: <%= @post.id %><br>

<!-- if user doesn't have permission, these should be deactivated, 
	once it's working, I mean -->
	<% if @current_user != nil %>
		<% if @current_user.id.to_s == @post.user %>
			<%= button_to "EDIT", "/cities/#{@city.id}/posts/#{@post.id}/edit", method: :get %> <br>
		<% end %>
	<% end %>
</div>
</div>
</div>

