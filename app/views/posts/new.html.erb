<body class="splashpage">
<div class="container">
	<div class="text-center">
		<h2>Add a New Post</h2>
		<div class="row">
			<div col-md-4>
			</div>
			<div class="col-md-4 col-md-offset-4 well">
				<%= form_for(@post, url: user_posts_path, action: :create) do |f| %>
					
					<!-- username & city should be prepopulated by session -->
					<%= f.text_field :title, placeholder: "Post Title" %>
					<br>
					<%= f.text_area :content, placeholder: "Post Content" %>
					<br>
					<%= f.collection_select :city, City.order(:name), :name, :name, include_blank: true %>
					<br>
					<%= f.submit "Save post" %>
				<% end %>
			</div>
		</div>
	</div>	
</div>
</body>